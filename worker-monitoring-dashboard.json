{
  "dashboard": {
    "id": null,
    "title": "Worker Node Monitoring",
    "tags": ["worker", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Worker Node CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{job=\"worker-node-exporter\",mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "max": 100,
            "unit": "percent"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Worker Node Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{job=\"worker-node-exporter\"} / node_memory_MemTotal_bytes{job=\"worker-node-exporter\"})) * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "max": 100,
            "unit": "percent"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Container Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{job=\"worker-cadvisor\"}[5m])",
            "legendFormat": "{{name}} CPU"
          },
          {
            "expr": "container_memory_usage_bytes{job=\"worker-cadvisor\"}",
            "legendFormat": "{{name}} Memory"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "MySQL Status",
        "type": "singlestat",
        "targets": [
          {
            "expr": "mysql_up{job=\"worker-mysql-exporter\"}",
            "legendFormat": "MySQL Status"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "RabbitMQ Status",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rabbitmq_up{job=\"worker-rabbitmq-exporter\"}",
            "legendFormat": "RabbitMQ Status"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16}
      },
      {
        "id": 6,
        "title": "Libvirt VMs Status",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(libvirt_domain_state_code{job=\"worker-libvirt-exporter\",state_code=\"1\"})",
            "legendFormat": "Running VMs"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Prometheus Metrics Ingestion Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(prometheus_tsdb_samples_appended_total[5m])",
            "legendFormat": "Samples/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
} 